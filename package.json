    "@types/node": "^22.13.10",
    "chokidar": "^4.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lerna": "^8.0.0",
    "lint-staged": "^15.1.0",
    "swc-plugin-gem": "^0.1.8",
    "typescript": "^5.6.2"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c",
